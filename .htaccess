# Bloquear acesso a arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir listagem de diretórios
Options -Indexes

# Forçar UTF-8
AddDefaultCharset UTF-8

